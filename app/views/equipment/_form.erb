<div class="container">
  <%= form_for @equipment do |f| %>
    <%= f.label :item1, "Item" %>
    <%= f.select(:item1, @options)  %><br><br>
    <%= f.label :item2, "Item" %>
    <%= f.select(:item2, @options)  %><br><br>
    <%= f.label :item3, "Item" %>
    <%= f.select(:item3, @options)  %><br><br>
    <%= f.hidden_field :aquarium_id, :value => @aquarium.id %>
    <%= f.submit "Next", :class => 'waves-effect waves-light btn-small orange' %>
  <% end %>
</div>
